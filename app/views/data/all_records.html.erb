<div class="form-container">
<h2>Get Infusionsoft Tables</h2>
<%= form_tag({action: :get_records}, multipart: true) do %>
	</br>
	<%= text_field_tag :appname, nil, placeholder: 'appname' %>
	.infusionsoft.com
	</br>
	</br>
	<%= text_field_tag :apikey, nil, placeholder: 'API Key' %>
	</br>
	</br>
	<%= select_tag(:tablename, options_for_select(@tables)) %>
	<%= check_box_tag :csv,1,true %>
	<%= label_tag(:csv, "CSV?") %>
	<br />
	<br />
	<%= button_tag "Request Tables" %>
<% end %>
</div>
